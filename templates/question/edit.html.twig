{% extends 'Quizbase.html.twig' %}

{% block title %}Modifier une Question{% endblock %}

{% block body %}
{% if is_granted('ROLE_INSTRUCTEUR') %}

<div class="container mt-5">
    <h1 class="text-center mb-4">Modifier une Question</h1>
    <div class="card p-4 shadow">
        <div class="mb-3">
            {{ include('question/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>
    </div>
    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('app_question_index', {'quiz_id': quiz.id}) }}" class="btn btn-primary btn-sm">Retour à la liste</a>
    </div>
</div>

{% endif %}

{% endblock %}
