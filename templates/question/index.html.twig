{% extends 'Quizbase.html.twig' %}

{% block title %}Liste des Questions{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">Liste des Questions pour la Quiz : "{{ quiz.titre }}"</h1>
    <a href="{{ path('app_question_new', {'quiz_id': quiz.id}) }}" class="btn btn-primary mb-3">Créer une nouvelle question</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Contenu</th>
                <th>Quiz</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for question in questions %}
                <tr>
                    <td>{{ question.id }}</td>
                    <td>{{ question.contenu }}</td>
                    <td>{{ question.quiz.titre }}</td>
                    <td>
                        <a href="{{ path('app_question_show', {'quiz_id': quiz.id, 'id': question.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('app_question_edit', {'id': question.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        <a href="{{ path('app_reponse_index', {'question_id': question.id}) }}" class="btn btn-success btn-sm">Liste Reponses</a>
                        <td>{{ include('question/_delete_form.html.twig') }}</td>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">Aucune question disponible</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_quiz_index', {'quiz_id': quiz.id}) }}" class="btn btn-secondary mt-3">Retour à la liste Quiz</a>

</div>
{% endblock %}
