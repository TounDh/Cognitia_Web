{% extends 'base.html.twig' %}

{% block title %}Détails de la Question{% endblock %}

{% block body %}
{% if is_granted('ROLE_INSTRUCTEUR') %}

<div class="container mt-5" style="padding: 150px;">
    <h2 class="text-center">Détails de la Question</h2>

    <div class="card p-4 shadow">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ question.id }}</td>
                </tr>
                <tr>
                    <th>Contenu</th>
                    <td>{{ question.contenu }}</td>
                </tr>
                <tr>
                    <th>Quiz</th>
                    <td>{{ question.quiz }}</td>
                </tr>
            </tbody>
        </table>
    </div>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_question_edit', {'id': question.id}) }}" class="btn btn-success btn-sm">Modifier</a>
        </div>

            <table>
                <tbody>
                    <tr>
                        <td>{{ include('question/_delete_form.html.twig') }}</td>
                    </tr>
                    <tr>
                        <td><a href="{{ path('app_question_index', {'quiz_id': quiz.id}) }}" class="btn btn-primary btn-sm">Retour à la liste</a></td>
                    </tr>
                </tbody>
            </table>
</div>

{% endif %}

{% endblock %}
