{% extends 'baseDashboard.html.twig' %}

{% block title %}Questions Management!{% endblock %}

{% block body %}

{% if is_granted('ROLE_INSTRUCTEUR') %}


<div class="content-page">
                <div class="content">

                    <!-- Start Content-->
                    <div class="container-fluid">

                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="header-title">Détails du Question</h4>

                                        <div class="row">
                                            <div class="col-lg-6">
                                                <table class="table table-bordered">
                                                    <tbody>
                                                        <tr>
                                                            <th>Id</th>
                                                            <td>{{ question.id }}</td>
                                                        </tr>
                                                        <tr>
                                                            <th>Contenu</th>
                                                            <td>{{ question.contenu }}</td>
                                                        </tr>
                                                        <tr>
                                                            <th>Quiz</th>
                                                            <td>{{ question.quiz }}</td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            <a href="{{ path('dashboard_question_index', {'quiz_id': quiz.id}) }}" class="btn btn-primary mt-3">Retour à la liste Question</a>
                                            </div> <!-- end col -->

                                            
                                        </div>
                                        <!-- end row-->

                                    </div> <!-- end card-body -->
                                </div> <!-- end card -->
                            </div><!-- end col -->
                        </div>
                        <!-- end row -->
                    </div> 
                    <!-- end Content-->
                </div>
</div>

{% endif %}

{% endblock %}
