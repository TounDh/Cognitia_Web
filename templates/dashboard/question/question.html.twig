{% extends 'baseDashboard.html.twig' %}

{% block title %}Questions Management!{% endblock %}

{% block body %}

{% if is_granted('ROLE_ADMIN') %}



                <div class="content-page">
                <div class="content">

                    <!-- Start Content-->
                    <div class="container-fluid">

                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="mt-0 header-title">Liste Questions</h4>

                                        <div id="datatable_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
                                        <div class="row">
                                        
                                    </div>

                                        <table id="datatable" class="table table-hover table-striped dt-responsive table-responsive nowrap">
                                            <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Contenu</th>
                                                <th>Quiz</th>
                                                <th class="text-end">Actions</th>
                                            </tr>
                                            </thead>
    
    
                                            <tbody>
                                            {% for question in questions %}
                                                <tr>
                                                    <td>{{ question.id }}</td>
                                                    <td>{{ question.contenu }}</td>
                                                    <td>{{ question.quiz.titre }}</td>
                                                    <td class="text-end">
                                                        <a href="{{ path('dashboard_question_show', {'quiz_id': quiz.id, 'id': question.id}) }}" class="btn btn-info btn-sm">Voir</a>
                                                        <a href="{{ path('dashboard_question_edit', {'id': question.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                                        <a href="{{ path('dashboard_reponse_index', {'question_id': question.id}) }}" class="btn btn-success btn-sm">Liste Reponses</a>
                                                        <td>{{ include('dashboard/question/deleteQuestion.html.twig') }}</td>
                                                    </td>
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="3" class="text-center">Aucune question disponible</td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        <a href="{{ path('dashboard_question_new', {'quiz_id': quiz.id}) }}" class="btn btn-primary mb-3">Ajouter une nouvelle question</a>
                                        </table>
                                        <a href="{{ path('dashboard_quiz') }}" class="btn btn-primary mt-3">Retour Ã  la liste Quiz</a>
                                    </div>

                                </div>

                                </div>
                               
                            </div>
                        </div> <!-- end row -->
                    </div>
                </div>
            </div>

{% endif %}

{% endblock %}
