{% extends 'baseDashboard.html.twig' %}

{% block title %}Certificat Management!{% endblock %}

{% block body %}

{% if is_granted('ROLE_ADMIN') %}


                <div class="content-page">
                <div class="content">

                    <!-- Start Content-->
                    <div class="container-fluid">

                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="mt-0 header-title">Liste Certificat</h4>

                                        <div id="datatable_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
                                        <div class="row">
                                        <div class="col-sm-12 col-md-6">
                                            <div class="dataTables_length" id="datatable_length">
                                                <label class="form-label d-flex align-items-center gap-2">
                                                Afficher
                                                    <select name="datatable_length" aria-controls="datatable" class="form-select form-select-sm" onchange="window.location.href = '{{ path('dashboard_certificat') }}?page={{ currentPage }}&limit=' + this.value">
                                                        <option value="2" {{ limit == 2 ? 'selected' : '' }}>2</option>
                                                        <option value="5" {{ limit == 5 ? 'selected' : '' }}>5</option>
                                                        <option value="10" {{ limit == 10 ? 'selected' : '' }}>10</option>
                                                        <option value="50" {{ limit == 50 ? 'selected' : '' }}>50</option>
                                                        <option value="100" {{ limit == 100 ? 'selected' : '' }}>100</option>
                                                    </select> 
                                                    entrées
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-6">
                                            <div id="datatable_filter" class="dataTables_filter">
                                                <form method="get" action="{{ path('dashboard_certificat') }}">
                                                    <label>Rechercher:
                                                        <input type="search" name="q" class="form-control form-control-sm" placeholder="Rechercher..." aria-controls="datatable" value="{{ app.request.query.get('q') }}">
                                                    </label>
                                                    <input type="hidden" name="limit" value="{{ limit }}">
                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                        <table id="datatable" class="table table-hover table-striped dt-responsive table-responsive nowrap">
                                            <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Quiz</th>
                                                <th>Apprenant</th>
                                                <th>Score</th>
                                                <th>Date d'obtention</th>
                                                <th class="text-center">Actions</th>
                                            </tr>
                                            </thead>
    
    
                                            <tbody>
                                            {% for certificat in certificats %}
                                            <tr>
                                                <td>{{ certificat.id }}</td>
                                                <td>{{ certificat.quiz.titre }}</td>
                                                <td>{{ certificat.apprenant.firstName }} {{ certificat.apprenant.lastName }}</td>
                                                <td>{{ certificat.score }}%</td>
                                                <td>{{ certificat.dateObtention ? certificat.dateObtention|date('d/m/Y') : '' }}</td>
                                                <td class="text-center">
                                                    {{ include('dashboard/certificat/_delete_form.html.twig') }}
                                                </td>
                                            </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>




                                    <div class="row">
                                    

                                    <div class="col-sm-12 col-md-5">
                                        <div class="dataTables_info" id="datatable_info" role="status" aria-live="polite">
                                            Affichage de {{ (currentPage - 1) * limit + 1 }} à {{ min(currentPage * limit, totalItems) }} sur {{ totalItems }} éléments
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-7">
                                        <div class="dataTables_paginate paging_simple_numbers" id="datatable_paginate">
                                            <ul class="pagination">
                                                <li class="paginate_button page-item previous {{ currentPage == 1 ? 'disabled' : '' }}">
                                                    <a href="{{ path('dashboard_certificat', {'page': currentPage - 1, 'limit': limit}) }}" class="page-link">Précédent</a>
                                                </li>
                                                {% for i in 1..totalPages %}
                                                <li class="paginate_button page-item {{ currentPage == i ? 'active' : '' }}">
                                                    <a href="{{ path('dashboard_certificat', {'page': i, 'limit': limit}) }}" class="page-link">{{ i }}</a>
                                                </li>
                                                {% endfor %}
                                                <li class="paginate_button page-item next {{ currentPage == totalPages ? 'disabled' : '' }}">
                                                    <a href="{{ path('dashboard_certificat', {'page': currentPage + 1, 'limit': limit}) }}" class="page-link">Suivant</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>



                                </div>
                               
                            </div>
                        </div> <!-- end row -->
                    </div>
                </div>
            </div>
{% endif %}

{% endblock %}
