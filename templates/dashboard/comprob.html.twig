{% extends 'baseDashboard.html.twig' %}

{% block title %}Gestion Factures{% endblock %}

{% block body %}
<div class="content-page">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">

                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h4 class="mt-0 header-title">Liste des factures risquées</h4>
 

                            </div>
                            

                            <div id="datatable_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
                                <div class="row mb-3 align-items-center">
                                    
                                    
                            
                                    
                                </div>

                                <table id="datatable" class="table table-bordered dt-responsive table-responsive nowrap">
                                    <thead>
                                        <tr>
                                            <th>ID facture</th>
                                            <th>Client</th>
                                            <th>Cours choisis</th>
                                            <th>Montant</th>
                                            <th>Date Validation</th>
                                            <th>Statut</th>
                                            <th>Risque</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>

                                    <tbody>

                                        {% for commande in commandes %}
                                        {% if commande.statut == 'unpaid' %}

            {% set sum = 0 %}
            {% for cours in commande.panier.cours %}
                {% set sum = sum + cours.prix %}
            {% endfor %}
            {% set tax = sum * 0.10 %}
            {% set total = sum + tax %}
                                            <tr>
                                                <td>{{ commande.id }}</td>
                                                <td>
                                                    {% if commande.panier and commande.panier.user %}
                        {{ commande.panier.user.firstName }} {{ commande.panier.user.lastName }}
                    {% else %}
                        Client non identifié
                    {% endif %}
                                                </td>

                                                <td>                    {% if commande.panier %}
                        {% for cours in commande.panier.cours %}
                            {{ cours.titre }}{% if not loop.last %}, {% endif %}
                        {% else %}
                            Aucun cours
                        {% endfor %}
                    {% else %}
                        Aucun cours
                    {% endif %}
                                                </td>
                                                <td>{{ total|number_format(0, ',', ' ') }} TND</td>
                                                <td>{{ commande.dateAchat|date('Y-m-d H:i:s') }}</td>
                                                <td>{{ commande.Statut }}</td>
                                                <td>
                                                            {% if commande.riskLevel == 'Low Risk' %}
                                    <span class="badge bg-success">{{ commande.riskLevel }}</span>
                                {% elseif commande.riskLevel == 'Moderate Risk' %}
                                    <span class="badge bg-warning">{{ commande.riskLevel }}</span>
                                {% else %}
                                    <span class="badge bg-danger">{{ commande.riskLevel }}</span>
                                {% endif %}
                                                </td>



    <td>      
    <form action="{{ path('commande_eliminer', {'id': commande.id}) }}" method="post" style="display: inline;">
        <button type="submit" class="btn btn-secondary">Eliminer</button>
    </form>
      </td>



                                            </tr>
                                            {% endif %}
                                        {% else %}
                                            <tr>
                                                <td colspan="7" class="text-center">Aucune facture trouvée!</td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>





                                </table>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 col-md-5">
                                    <div class="dataTables_info" id="datatable_info" role="status" aria-live="polite">
                                         {{ commandes|length }} entrées affichées
                                    </div>
                                </div>
                                                                
                                <div class="col-sm-12 col-md-6 recapitulatif offset-md-10">
                                <p>Récapitulatif:</p>
    <ul class="list-unstyled">
        <li><span class="risk-circle bg-success"></span>
        Faible Risque: {{ riskCounts['Low Risk'] }}</li>
        <li><span class="risk-circle bg-warning"></span>
        Risque Modéré: {{ riskCounts['Moderate Risk'] }}</li>
        <li><span class="risk-circle bg-danger"></span>
        Haut Risque: {{ riskCounts['High Risk'] }}</li>
    </ul>
    
</div>

<!-- Tableau des commandes -->
<table id="datatable" class="table table-bordered dt-responsive table-responsive nowrap">
    <!-- ... Votre tableau existant ... -->
</table>
                                
                            </div>

                             
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .btn-group {
        gap: 5px;
    }
    .badge {
        padding: 0.5em 1em;
    }

    .risk-circle {
    display: inline-block;
    width: 10px; /* Taille du cercle */
    height: 10px;
    border-radius: 50%; /* Rend l'élément circulaire */
    margin-right: 8px; /* Espacement entre le cercle et le texte */
}
    
.recapitulatif {
    right: 50px; /* Ajuste la valeur selon ton besoin */
}
</style>
{% endblock %}