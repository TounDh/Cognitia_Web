{% extends 'base.html.twig' %}

{% block title %}Créer un événement{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Créer un nouvel événement</h1>

    {# Affichage des erreurs sous forme d'alertes #}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    {# Affichage du formulaire #}
    <div class="card p-4 shadow-sm">
        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
        
        <div class="mb-3">
            {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.titre) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.lieu, 'Lieu', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.lieu, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.lieu) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.type, 'Type', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.type) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.dateDebut, 'Date de début', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.dateDebut) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.dateFin, 'Date de fin', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.dateFin) }}
        </div>

        <button type="submit" class="btn btn-primary">Créer l'événement</button>

        {{ form_end(form) }}
    </div>

    <a href="{{ path('app_event_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
</div>

{% block javascripts %}
    <script>
        // Client-side validation
        document.querySelector('form').addEventListener('submit', function(event) {
            let dateDebut = document.querySelector('#form_dateDebut').value;
            let dateFin = document.querySelector('#form_dateFin').value;

            if (!dateDebut || !dateFin) {
                event.preventDefault();
                alert("Les dates de début et de fin sont obligatoires.");
            }
        });
    </script>
{% endblock %}

{% endblock %}
