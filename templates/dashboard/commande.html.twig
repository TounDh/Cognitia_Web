
{% extends 'baseDashboard.html.twig' %}

{% block title %}Gestion Factures{% endblock %}

{% block body %}
<div class="content-page">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h4 class="mt-0 header-title">Liste des factures</h4>
                                <a href="{{ path('app_archive') }}" class="btn btn-outline-secondary">
                                    <i class="fas "></i> consulter archive
                                </a>
                            </div>
                            <div id="datatable_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
                                <div class="row mb-3">
                                    
                                </div>

                                <table id="datatable" class="table table-bordered dt-responsive table-responsive nowrap">
                                    <thead>
                                        <tr>
                                            <th>Num° facture</th>
                                            <th>Client</th>
                                            <th>Cours choisis</th>
                                            <th>Montant</th>
                                            <th>Statut</th>
                                            <th>Date Validation</th>
                                            <th>Action</th>
                                            
                                        </tr>
                                    </thead>

                                    <tbody>

                                        {% for commande in commandes %}
                                        {% set sum = 0 %}
            {% for cours in commande.panier.cours %}
                {% set sum = sum + cours.prix %}
            {% endfor %}
            {% set tax = sum * 0.10 %}
            {% set total = sum + tax %}
                                            <tr>
                                                <td>{{ commande.id }}</td>
                                                <td>
                                                    {% if commande.panier and commande.panier.user %}
                        {{ commande.panier.user.firstName }} {{ commande.panier.user.lastName }}
                    {% else %}
                        Client non identifié
                    {% endif %}
                                                </td>
                                                <td>                    {% if commande.panier %}
                        {% for cours in commande.panier.cours %}
                            {{ cours.titre }}{% if not loop.last %}, {% endif %}
                        {% else %}
                            Aucun cours
                        {% endfor %}
                    {% else %}
                        Aucun cours
                    {% endif %}
                                                </td>
                                                <td>{{ total|number_format(0, ',', ' ') }} TND</td>
                                                <td>{{ commande.statut }}</td>
                                                <td>{{ commande.dateAchat|date('Y-m-d H:i:s') }}</td>
                                                <td>
    <form action="{{ path('commande_archive', {'id': commande.id}) }}" method="post" style="display: inline;">
        <button type="submit" class="btn btn-secondary">Archiver</button>
    </form>
</td>

                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="7" class="text-center">Aucune facture trouvée!</td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 col-md-5">
                                    <div class="dataTables_info" id="datatable_info" role="status" aria-live="polite">
                                         {{ commandes|length }} entrées affichées
                                    </div>
                                </div>
                                
                            </div>

                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{ parent() }}
{% endblock %}

{% block stylesheets %}

<style>
    .btn-group {
        gap: 5px;
    }
    .badge {
        padding: 0.5em 1em;
    }
</style>
{% endblock %}