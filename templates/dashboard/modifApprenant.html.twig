{# templates/dashboard/modifApprenant.html.twig #}

{% extends 'baseDashboard.html.twig' %}

{% block title %}Modifier Apprenant{% endblock %}

{% block body %}
<div class="content-page">
    <div class="content">
        <!-- Start Content-->
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title">Modifier Apprenant</h4>
                            <div class="row">
                                <div class="col-lg-6">
                                    {{ form_start(form) }}
                                        <div class="mb-3">
                                            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': apprenant.email}}) }}
                                        </div>

                                        <div class="mb-3">
                                            {{ form_label(form.firstName, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.firstName, {'attr': {'class': 'form-control', 'placeholder': apprenant.firstName}}) }}
                                        </div>

                                        <div class="mb-3">
                                            {{ form_label(form.lastName, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.lastName, {'attr': {'class': 'form-control', 'placeholder': apprenant.lastName}}) }}
                                        </div>

                                        <div class="mb-3">
                                            {{ form_label(form.phoneNumber, 'Numéro Téléphone', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control', 'placeholder': apprenant.phoneNumber}}) }}
                                        </div>

                                        <div class="mb-3">
                                            {{ form_label(form.level, 'Niveau', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.level, {'attr': {'class': 'form-control', 'placeholder': apprenant.level}}) }}
                                        </div>
                                        
                                        <div class="mb-3">
                                            {{ form_label(form.plainPassword, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Nouveau mot de passe'}}) }}
                                            <small class="form-text text-muted">Laissez vide pour ne pas modifier le mot de passe.</small>
                                        </div>
                                        

                                        <button type="submit" class="btn btn-primary waves-effect waves-light">Modifier</button>
                                    {{ form_end(form) }}
                                </div> <!-- end col -->
                            </div>
                            <!-- end row-->
                        </div> <!-- end card-body -->
                    </div> <!-- end card -->
                </div><!-- end col -->
            </div>
            <!-- end row -->
        </div> 
        <!-- end Content-->
    </div>
</div>
{% endblock %}












