{% extends 'baseDashboard.html.twig' %}

{% block title %}Quiz Management!{% endblock %}

{% block body %}


<div class="content-page">
                <div class="content">

                    <!-- Start Content-->
                    <div class="container-fluid">

                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="header-title">Modifier Quiz</h4>

                                        <div class="row">
                                            <div class="col-lg-6">
                                                {{ form_start(form) }}
                                                        <div class="mb-3">
                                                            {{ form_label(form.titre, 'Titre') }}
                                                            {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                                                            {{form_errors(form.titre)}}
                                                        </div>
                                                        <div class="mb-3">
                                                            {{ form_label(form.tempsMax, 'Temps Max (secondes)') }}
                                                            {{ form_widget(form.tempsMax, {'attr': {'class': 'form-control'}}) }}
                                                            {{form_errors(form.tempsMax)}}
                                                        </div>
                                                        <div class="mb-3">
                                                            {{ form_label(form.cours, 'Cours associé') }}
                                                            {{ form_widget(form.cours, {'attr': {'class': 'form-control'}}) }}
                                                        </div>
                                                        <div class="mb-3">
                                                            {{ form_label(form.instructeur, 'Instructeur associé') }}
                                                            {{ form_widget(form.instructeur, {'attr': {'class': 'form-control'}}) }}
                                                        </div>
                                                        <button type="submit" class="btn btn-success">Modifier</button>
                                                    {{ form_end(form) }}
                                                    
                                                    <a href="{{ path('dashboard_quiz') }}" class="btn btn-primary mt-3">Retour à la liste</a>
                                            </div> <!-- end col -->
                                        </div>
                                        <!-- end row-->

                                    </div> <!-- end card-body -->
                                </div> <!-- end card -->
                            </div><!-- end col -->
                        </div>
                        <!-- end row -->
                    </div> 
                    <!-- end Content-->
                </div>
</div>


{% endblock %}
