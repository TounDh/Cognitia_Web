{% extends 'baseDashboard.html.twig' %}

{% block title %}Quiz Management!{% endblock %}

{% block body %}

{% if is_granted('ROLE_ADMIN') %}


                <div class="content-page">
                <div class="content">

                    <!-- Start Content-->
                    <div class="container-fluid">

                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="mt-0 header-title">Liste Quiz</h4>

                                        {# Remplacer le formulaire existant par ce code AJAX #}
                                        <div class="mb-4">
                                            <div class="row g-3 align-items-end">
                                                <div class="col-md-4">
                                                    <label for="search" class="form-label">Rechercher</label>
                                                    <input type="text" id="searchInput" class="form-control" placeholder="Entrez un mot-clé...">
                                                </div>
                                                <div class="col-md-3">
                                                    <label for="instructeur" class="form-label">Instructeur</label>
                                                    <select id="instructeurSelect" class="form-select">
                                                        <option value="">Tous les instructeurs</option>
                                                        {% for instructeur in instructeurs %}
                                                            <option value="{{ instructeur.id }}">
                                                                {{ instructeur.firstName }} {{ instructeur.lastName }}
                                                            </option>
                                                        {% endfor %}
                                                    </select>
                                                </div>
                                                <div class="col-md-3">
                                                    <label for="cours" class="form-label">Cours</label>
                                                    <select id="coursSelect" class="form-select">
                                                        <option value="">Tous les cours</option>
                                                        {% for cours in coursList %}
                                                            <option value="{{ cours.id }}">
                                                                {{ cours.titre }}
                                                            </option>
                                                        {% endfor %}
                                                    </select>
                                                </div>
                                                <div class="col-md-2 d-grid gap-2">
                                                    <button id="resetFilters" class="btn btn-outline-secondary">
                                                        <i class="fas fa-sync-alt"></i> Réinitialiser
                                                    </button>
                                                </div>
                                            </div>
                                        </div>

                                        <div id="datatable_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
                                            <div class="row mb-3">
                                                <div class="col-sm-12 col-md-6">
                                                    <div class="dataTables_length" id="datatable_length">
                                                        <label class="form-label d-flex align-items-center gap-2">
                                                            Afficher
                                                            <select name="datatable_length" aria-controls="datatable" class="form-select form-select-sm" onchange="window.location.href = '{{ path('dashboard_quiz') }}?page={{ currentPage }}&limit=' + this.value">
                                                                <option value="2" {{ limit == 2 ? 'selected' : '' }}>2</option>
                                                                <option value="5" {{ limit == 5 ? 'selected' : '' }}>5</option>
                                                                <option value="10" {{ limit == 10 ? 'selected' : '' }}>10</option>
                                                                <option value="50" {{ limit == 50 ? 'selected' : '' }}>50</option>
                                                                <option value="100" {{ limit == 100 ? 'selected' : '' }}>100</option>
                                                            </select>
                                                            entrées
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>

                                        <table id="datatable" class="table table-hover table-striped dt-responsive table-responsive nowrap">
                                            <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Titre</th>
                                                <th>Cours</th>
                                                <th>Instructeur</th>
                                                <th class="text-end">Actions</th>
                                            </tr>
                                            </thead>
    
    
                                            <tbody>
                                            {% for quiz in quizzes %}
                                            <tr>
                                                <td>{{ quiz.id }}</td>
                                                <td>{{ quiz.titre }}</td>
                                                <td>{{ quiz.cours.titre }}</td>
                                                <td>{{ quiz.instructeur.email }}</td>
                                                <td class="text-end">
                                                    <a href="{{ path('dashboard_quiz_show', {'id': quiz.id}) }}" class="btn btn-info btn-sm">Voir</a>
                                                    <a href="{{ path('dashboard_quiz_edit', {'id': quiz.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                                    <a href="{{ path('dashboard_quiz_stats', {'id': quiz.id}) }}" class="btn btn-success btn-sm">Statistiques</a>
                                                    <a href="{{ path('dashboard_question_index', {'quiz_id': quiz.id}) }}" class="btn btn-success btn-sm">Liste Questions</a>
                                                    <td>{{ include('dashboard/quiz/deleteQuiz.html.twig') }}</td>
                                                </td>
                                            </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>




                                    <div class="row">
                                    

                                    <div class="col-sm-12 col-md-5">
                                        <div class="dataTables_info" id="datatable_info" role="status" aria-live="polite">
                                            Affichage de {{ (quizzes.currentPageNumber - 1) * quizzes.getItemNumberPerPage + 1 }} 
                                            à {{ min(quizzes.currentPageNumber * quizzes.getItemNumberPerPage, quizzes.getTotalItemCount) }} 
                                            sur {{ quizzes.getTotalItemCount }} éléments
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-7">
                                        <div class="dataTables_paginate paging_simple_numbers" id="datatable_paginate">
                                            {{ knp_pagination_render(quizzes) }}
                                        </div>
                                    </div>
                                </div>



                                </div>
                               
                            </div>
                        </div> <!-- end row -->
                    </div>
                </div>
            </div>
{% endif %}

{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('searchInput');
    const instructeurSelect = document.getElementById('instructeurSelect');
    const coursSelect = document.getElementById('coursSelect');
    const tableBody = document.querySelector('#datatable tbody');
    const paginationContainer = document.querySelector('.pagination');

    function fetchQuizzes(page = 1) {
        const params = new URLSearchParams({
            q: searchInput.value,
            instructeur: instructeurSelect.value,
            cours: coursSelect.value,
            page: page
        });

        fetch(`{{ path('dashboard_quiz') }}?${params.toString()}`)
            .then(response => response.text())
            .then(html => {
                const parser = new DOMParser();
                const doc = parser.parseFromString(html, 'text/html');
                const newTableBody = doc.querySelector('#datatable tbody');
                const newPagination = doc.querySelector('.pagination');
                tableBody.innerHTML = newTableBody.innerHTML;
                paginationContainer.innerHTML = newPagination ? newPagination.innerHTML : '';
            });
    }

    // Ajouter les écouteurs d'événements
    searchInput.addEventListener('input', () => fetchQuizzes(1));
    instructeurSelect.addEventListener('change', () => fetchQuizzes(1));
    coursSelect.addEventListener('change', () => fetchQuizzes(1));

    // Gérer les clics sur la pagination
    document.addEventListener('click', function(e) {
        if (e.target.classList.contains('page-link')) {
            e.preventDefault();
            const page = e.target.getAttribute('data-page');
            fetchQuizzes(page);
        }
    });

    // Réinitialiser les filtres
    document.getElementById('resetFilters').addEventListener('click', function() {
        searchInput.value = '';
        instructeurSelect.value = '';
        coursSelect.value = '';
        fetchQuizzes(1);
    });
});
</script>
{% endblock %}
