{% extends 'baseDashboard.html.twig' %}

{% block title %}Quiz Management!{% endblock %}

{% block body %}

{% if is_granted('ROLE_ADMIN') %}


<div class="content-page">
                <div class="content">

                    <!-- Start Content-->
                    <div class="container-fluid">

                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="header-title">Détails du Quiz</h4>

                                        <div class="row">
                                            <div class="col-lg-6">
                                                <table class="table table-bordered">
                                                    <tbody>
                                                        <tr>
                                                            <th>Id</th>
                                                            <td>{{ quiz.id }}</td>
                                                        </tr>
                                                        <tr>
                                                            <th>Titre</th>
                                                            <td>{{ quiz.titre }}</td>
                                                        </tr>
                                                        <tr>
                                                            <th>Temps Max (secondes)</th>
                                                            <td>{{ quiz.tempsMax }} sec</td>
                                                        </tr>
                                                        <tr>
                                                            <th>Cours (associé)</th>
                                                            <td>{{ quiz.cours.titre }}</td>
                                                        </tr>
                                                        <tr>
                                                            <th>Instructeur (associé)</th>
                                                            <td>{{ quiz.instructeur.email }}</td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                                <a href="{{ path('dashboard_quiz') }}" class="btn btn-primary mt-3">Retour à la liste</a>
                                            </div> <!-- end col -->

                                            
                                        </div>
                                        <!-- end row-->

                                    </div> <!-- end card-body -->
                                </div> <!-- end card -->
                            </div><!-- end col -->
                        </div>
                        <!-- end row -->
                    </div> 
                    <!-- end Content-->
                </div>
</div>

{% endif %}

{% endblock %}
