{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        body { margin-top: 20px; background:rgb(218, 218, 218); }
        .card-footer-btn { display: flex; align-items: center; border-top-left-radius: 0!important; border-top-right-radius: 0!important; }
        .text-uppercase-bold-sm { text-transform: uppercase!important; font-weight: 500!important; letter-spacing: 2px!important; font-size: .85rem!important; }
        .hover-lift-light { transition: box-shadow .25s ease,transform .25s ease,color .25s ease,background-color .15s ease-in; }
        .btn-dark { color: #fff; background-color: #1e2e50; border-color: #1e2e50; }
        .card { background-color: #fff; border: 1px solid rgba(30,46,80,.09); border-radius: 0.25rem; box-shadow: 0 20px 27px 0 rgb(0 0 0 / 5%); }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-6 mb-7">
    <div class="row justify-content-center">
        <div class="col-lg-12 col-xl-7">
            <div class="card">
                <div class="card-body p-5">
                    <h2>  ________________________ </h2>
                    <h2>Hello, </h2>
                    <p class="fs-sm">Here's your receipt for your payment of <strong>$$$$$$ USD</strong>.</p>
                    <div class="border-top border-gray-200 pt-4 mt-4">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="text-muted mb-2">Order number</div>
                                <strong>xxxxxx</strong>
                            </div>
                            <div class="col-md-6 text-md-end">
                                <div class="text-muted mb-2">Purchase Date</div>
                                <strong>xxxxxxxxxx</strong>
                            </div>
                        </div>
                    </div>
                    <div class="border-top border-gray-200 mt-4 py-4">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="text-muted mb-2">Client</div>
                                <strong>xxxxxxxxxxx</strong>
                                <p class="fs-sm">xxxxxxxxxxxxxx<br>
                                    <a href="" class="text-purple">mail client</a>
                                </p>
                            </div>
                            <div class="col-md-6 text-md-end">
                                <div class="text-muted mb-2">Payment to</div>
                                <strong>COGNITIA</strong>
                                <p class="fs-sm">123 Avenue, Tunis<br>
                                    <a href="" class="text-purple">contact@usefuldev.com</a>
                                </p>
                            </div>
                        </div>
                    </div>
                    <table class="table border-bottom border-gray-200 mt-3">
                        <thead>
                            <tr>
                                <th scope="col" class="fs-sm text-dark text-uppercase-bold-sm px-0">Description</th>
                                <th scope="col" class="fs-sm text-dark text-uppercase-bold-sm text-end px-0">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            
                        </tbody>
                    </table>
                    <div class="mt-5">
                        <div class="d-flex justify-content-end">
                            <p class="text-muted me-3">Total :</p>
                            <h5 class="text-success">xxxxxxxx USD</h5>
                        </div>
                    </div>
                </div>
                <a href="#" class="btn btn-dark btn-lg card-footer-btn justify-content-center text-uppercase-bold-sm hover-lift-light">Pay now</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
