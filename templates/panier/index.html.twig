{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<section class="mt-5 pt-5 pb-5">
  <div class="container">
    <div class="row w-100">
        <div class="col-lg-12 col-md-12 col-12">
            <h3 class="display-5 mb-2 text-center">Votre Panier</h3>
            <p class="mb-5 text-center">
                <i class="text-info font-weight-bold"></i> cours dans votre panier</p>
            <table id="shoppingCart" class="table table-condensed table-responsive">
                <thead>
                    <tr>
                        <th style="width:60%">Cours</th>
                        <th style="width:12%">Prix</th>
                        <th style="width:10%">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% set total = 0 %}
                    <td colspan="4" class="text-center">Votre panier est vide.</td>
                </tbody>
            </table>
            <div class="col-12 text-right">
                <h4>Total:</h4>
                <h1>${{ total }}</h1>
            </div>
        </div>
    </div>
    <div class="row mt-4 d-flex align-items-center">
        <div class="col-sm-6 order-md-2 text-right">
            <a" class="btn btn-primary mb-4 btn-lg pl-5 pr-5">Passer la commande</a>
        </div>
        <div class="col-sm-6 mb-3 mb-m-1 order-md-1 text-md-left">
            <a >
                <i class="fas fa-arrow-left mr-2"></i> Continuer vos achats</a>
        </div>
    </div>
</div>
</section>
{% endblock %}
