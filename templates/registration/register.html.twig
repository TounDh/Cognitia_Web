{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<!-- START SECTION TOP -->
<section class="section-top">
    <div class="container">
        <div class="col-lg-10 offset-lg-1 text-center">
            <div class="section-top-title wow fadeInRight" data-wow-duration="1s" data-wow-delay="0.3s" data-wow-offset="0">
                <h1>Register Page</h1>
                <ul>
                    <li><a href="{{ path('app_home') }}">Home</a></li>
                    <li> / Register</li>
                </ul>
            </div><!-- //.HERO-TEXT -->
        </div><!--- END COL -->
    </div><!--- END CONTAINER -->
</section>    
<!-- END SECTION TOP -->

<!-- START LOGIN AND REGISTER -->
<section class="login_register section-padding">
    <div class="container">
        <div class="row">                
            <div class="col-lg-6 offset-lg-3 col-xs-12">
                <div class="register">
                    <h4 class="login_register_title">Create a new account:</h4>

                    <!-- Flash Messages -->
                    {% for flash_error in app.flashes('verify_email_error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}
                    
                    {{ form_start(registrationForm) }}
                    <div class="form-group">
                        <label for="inputEmail">Email Address</label>
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'id': 'inputEmail', 'autocomplete': 'email', 'required': 'required'}}) }}
                    </div>

                    <div class="form-group">
                        <label for="inputPassword">Password</label>
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'id': 'inputPassword', 'autocomplete': 'current-password', 'required': 'required'}}) }}
                    </div>

                    <div class="form-check d-flex justify-content-center mb-4">
                        {{ form_row(registrationForm.agreeTerms) }}
                    </div>

                    <div class="form-group col-lg-12">
                        <button type="submit" class="btn_one btn btn-primary" name="submit">Signup now</button>
                    </div>

                    {{ form_end(registrationForm) }}

                    <p class="text-center">Already have an account? <a href="{{ path('app_login') }}">Login</a></p>
                </div>
            </div><!--- END COL -->
        </div><!--- END ROW -->
    </div><!--- END CONTAINER -->
</section>
<!-- END LOGIN AND REGISTER -->
{% endblock %}