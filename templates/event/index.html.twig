{% extends 'base.html.twig' %}

{% block title %}Event List{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4 text-center">Event List</h1>

    {# Barre de recherche en temps réel #}
    <div class="mb-4">
        <div class="input-group w-50 mx-auto">
            <input type="text" id="search-input" class="form-control" placeholder="Rechercher un événement (titre, description, lieu)">
            <span class="input-group-text"><i class="fas fa-search"></i></span>
        </div>
    </div>

    {# Liens de tri alphabétique #}
    <div class="d-flex justify-content-end mb-3">
        <div class="btn-group">
            <a href="{{ path('app_event_index', {'sort': 'titre', 'direction': 'asc'}|merge(app.request.query.all|filter((v, k) => k not in ['sort', 'direction']))) }}"
               class="btn btn-outline-secondary sort-btn {% if app.request.query.get('sort') == 'titre' and app.request.query.get('direction') == 'asc' %}active{% endif %}"
               data-sort="titre" data-direction="asc">
                A-Z
            </a>
            <a href="{{ path('app_event_index', {'sort': 'titre', 'direction': 'desc'}|merge(app.request.query.all|filter((v, k) => k not in ['sort', 'direction']))) }}"
               class="btn btn-outline-secondary sort-btn {% if app.request.query.get('sort') == 'titre' and app.request.query.get('direction') == 'desc' %}active{% endif %}"
               data-sort="titre" data-direction="desc">
                Z-A
            </a>
        </div>
    </div>

    {# Liste des événements #}
    <div class="row" id="event-list">
        {% for event in events %}
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    {% if event.image %}
                        <img src="{{ asset('uploads/' ~ event.image) }}" class="card-img-top" alt="Event Image" style="height: 200px; object-fit: cover;">
                    {% else %}
                        <div class="card-img-top" style="height: 200px; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center;">
                            <span class="text-muted">No Image</span>
                        </div>
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ event.titre }}</h5>
                        <p class="card-text">{{ event.description|slice(0, 100) ~ '...' }}</p>
                        <p class="text-muted">Start: {{ event.dateDebut ? event.dateDebut|date('Y-m-d H:i') : '-' }}</p>
                        <p class="text-muted">Location: {{ event.lieu }}</p>
                        <span class="badge bg-info text-dark">{{ event.type }}</span>

                        <div class="d-flex justify-content-between mt-3">
                            <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-sm btn-outline-primary">View</a>
                            
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center text-muted">
                <p>No events found</p>
            </div>
        {% endfor %}
    </div>
</div>

{# Script JavaScript pour la recherche en temps réel #}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const searchInput = document.getElementById('search-input');
        const eventList = document.getElementById('event-list');
        const sortButtons = document.querySelectorAll('.sort-btn');
        let currentSort = '{{ app.request.query.get('sort', 'titre') }}';
        let currentDirection = '{{ app.request.query.get('direction', 'asc') }}';

        // Fonction pour charger les événements via AJAX
        function loadEvents(searchTerm, sort, direction) {
            fetch(`{{ path('app_event_search') }}?q=${encodeURIComponent(searchTerm)}&sort=${sort}&direction=${direction}`)
                .then(response => response.text())
                .then(html => {
                    eventList.innerHTML = html;
                })
                .catch(error => console.error('Erreur lors de la recherche:', error));
        }

        // Recherche en temps réel au fur et à mesure de la saisie
        searchInput.addEventListener('input', function () {
            const searchTerm = this.value.trim();
            loadEvents(searchTerm, currentSort, currentDirection);
        });

        // Gestion des boutons de tri
        sortButtons.forEach(button => {
            button.addEventListener('click', function (e) {
                e.preventDefault(); // Empêche le rechargement de la page
                currentSort = this.getAttribute('data-sort');
                currentDirection = this.getAttribute('data-direction');
                sortButtons.forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');
                loadEvents(searchInput.value.trim(), currentSort, currentDirection);
            });
        });
    });
</script>
{% endblock %}