{% extends 'base.html.twig' %}

{% block title %}Edit Event{% endblock %}

{% block body %}
<div class="container py-5 d-flex justify-content-center">
    <div class="col-md-8">
        <h1 class="text-center mb-4">Edit Event</h1>

        <div class="card shadow-lg p-4 border-0 rounded-3">
            <h5 class="card-title text-center mb-4 text-primary">Update Event Information</h5>

            {{ include('event/_form.html.twig', {
                'button_label': 'Update',
                'form_class': 'needs-validation',
                'novalidate': true
            }) }}

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('app_event_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Event List
                </a>

                {{ include('event/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
