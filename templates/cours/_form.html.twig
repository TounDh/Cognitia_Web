{% block stylesheets %}
    <style>
        .form-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding-top: 100px;
        }
        .card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 30px;
            width: 600px;
            max-width: 90%;
        }
        .form-table {
            width: 100%;
        }
        .form-table td {
            padding: 10px;
        }
        .btn-primary {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            display: block;
            width: 100%;
            text-align: center;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh; padding-top: 100px;">
    <div class="card p-4 shadow-lg" style="width: 50rem; border-radius: 15px;">
        <h2 class="text-center mb-4">{{ button_label|default('Save Course') }}</h2>
        {{ form_start(form) }}
            <table class="table table-borderless">
                <tbody>
                    <tr>
                        <td>{{ form_label(form.titre) }}</td>
                        <td>{{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(form.description) }}</td>
                        <td>{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(form.imageFile) }}</td>
                        <td>{{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(form.datePublication) }}</td>
                        <td>{{ form_widget(form.datePublication, {'attr': {'class': 'form-control'}}) }}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(form.duree) }}</td>
                        <td>{{ form_widget(form.duree, {'attr': {'class': 'form-control'}}) }}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(form.difficulte) }}</td>
                        <td>{{ form_widget(form.difficulte, {'attr': {'class': 'form-control'}}) }}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(form.prix) }}</td>
                        <td>{{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(form.instructeur) }}</td>
                        <td>{{ form_widget(form.instructeur, {'attr': {'class': 'form-control'}}) }}</td>
                    </tr>
                </tbody>
            </table>
            <div class="text-center">
                <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
            </div>
            {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
