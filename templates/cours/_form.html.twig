{% block stylesheets %}
    <style>
        .form-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding-top: 100px;
        }
        .card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 30px;
            width: 600px;
            max-width: 90%;
        }
        .form-table {
            width: 100%;
        }
        .form-table td {
            padding: 10px;
        }
        .btn-primary {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            display: block;
            width: 100%;
            text-align: center;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="form-container">
        <div class="card">
            <h2>{{ button_label|default('Save') }} Cours</h2>
            {{ form_start(form) }}
            <table class="form-table">
                <tr>
                    <td>{{ form_label(form.titre) }}</td>
                    <td>{{ form_widget(form.titre) }}</td>
                </tr>
                <tr>
                    <td>{{ form_label(form.description) }}</td>
                    <td>{{ form_widget(form.description) }}</td>
                </tr>
                <tr>
                    <td>{{ form_label(form.image) }}</td>
                    <td>{{ form_widget(form.image) }}</td>
                </tr>
                <tr>
                    <td>{{ form_label(form.datePublication) }}</td>
                    <td>{{ form_widget(form.datePublication) }}</td>
                </tr>
                <tr>
                    <td>{{ form_label(form.duree) }}</td>
                    <td>{{ form_widget(form.duree) }}</td>
                </tr>
                <tr>
                    <td>{{ form_label(form.prix) }}</td>
                    <td>{{ form_widget(form.prix) }}</td>
                </tr>
                <tr>
                    <td>{{ form_label(form.difficulte) }}</td>
                    <td>{{ form_widget(form.difficulte) }}</td>
                </tr>
                <tr>
                    <td>{{ form_label(form.instructeur) }}</td>
                    <td>{{ form_widget(form.instructeur) }}</td>
                </tr>
            </table>
            <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
