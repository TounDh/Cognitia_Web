{% extends 'base.html.twig' %}

{% block title %}Courses{% endblock %}

{% block body %}

<!-- START SECTION TOP -->
<section class="section-top">
    <div class="container">
        <div class="col-lg-10 offset-lg-1 text-center">
            <div class="section-top-title wow fadeInRight" data-wow-duration="1s" data-wow-delay="0.3s" data-wow-offset="0">
                <h1>All Courses</h1>
                <ul>
                    <li><a href="{{ path('app_home') }}">Home</a></li>
                    <li> / Courses</li>
                </ul>
            </div>
        </div>
    </div>
</section> 
<!-- END SECTION TOP -->

<!-- START COURSE -->
<div class="best-cpurse section-padding">
    <div class="container">
        <div class="section-title">
            <h2>Popular Courses</h2>
            <p>Choose Our <span><u>Top Courses</u></span></p>
        </div>

        <!-- Add header section with title and create button -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Courses</h1>
            {% if is_granted('ROLE_INSTRUCTEUR') %}
                <a href="{{ path('app_cours_new') }}" class="btn btn-success">
                    <i class="fas fa-plus"></i> Create New Course
                </a>
            {% endif %}
        </div>

        <div class="row">
            {% for cours in cours %}
                <div class="col-lg-4 col-sm-6 col-xs-12 wow fadeInUp" data-wow-duration="1s" data-wow-delay="0.1s" data-wow-offset="0">
                    <div class="course-slide">
                        <div class="course-img">
                            {% if cours.image %}
                                <img src="{{ asset('uploads/cours/' ~ cours.image) }}" 
                                     alt="{{ cours.titre }}"
                                     style="width: 100%; height: 200px; object-fit: cover;"
                                >
                            {% else %}
                                <img src="{{ asset('images/default-course.jpg') }}" 
                                     alt="Default Course Image"
                                     style="width: 100%; height: 200px; object-fit: cover;"
                                >
                            {% endif %}
                            <div class="course-date">
                                <span class="month">{{ cours.prix }} TND</span>
                            </div>
                        </div>
                        <div class="course-content">
                            <a class="c_btn" href="{{ path('app_cours_show', {'id': cours.id}) }}">{{ cours.difficulte }}</a>
                            <h3><a href="{{ path('app_cours_show', {'id': cours.id}) }}">{{ cours.titre }}</a></h3>
                            <p>{{ cours.description|slice(0, 100) }}...</p> <!-- Slice the description to show only a preview -->
                            <span><i class="fa fa-calendar"></i>{{ cours.datePublication|date('Y-m-d') }}</span>
                            <span><i class="fa fa-clock-o"></i>{{ cours.duree }} hours</span>
                            <span><i class="fa fa-star"></i>4.9</span>
                            <span><i class="fa fa-table"></i><strong>30 Seats Available</strong></span>

                            <!-- Edit and Delete Buttons -->
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="{{ path('app_cours_show', {'id': cours.id}) }}" class="btn btn-primary">
                                    <i class="fas fa-eye"></i> View
                                </a>
                                {% if is_granted('ROLE_INSTRUCTEUR') and app.user == cours.instructeur %}
                                    <div class="btn-group">
                                        <a href="{{ path('app_cours_edit', {'id': cours.id}) }}" class="btn btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" action="{{ path('app_cours_delete', {'id': cours.id}) }}" 
                                              style="display: inline-block;"
                                              onsubmit="return confirm('Are you sure you want to delete this course? This action cannot be undone.');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cours.id) }}">
                                            <button class="btn btn-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info">
                        No courses found. 
                        {% if is_granted('ROLE_INSTRUCTEUR') %}
                            <a href="{{ path('app_cours_new') }}" class="alert-link">Create a new one</a>.
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
<!-- END COURSE -->

{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .card {
        transition: transform 0.2s;
        border-radius: 10px;
        border: none;
    }
    .card:hover {
        transform: translateY(-5px);
    }
    .btn-group .btn {
        border-radius: 4px;
        margin-left: 5px;
    }
    .badge {
        padding: 0.5em 1em;
    }
    .card-img-top {
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }
    .btn i {
        margin-right: 0.25rem;
    }
    form {
        display: inline-block;
    }
    /* Add some spacing for the header section */
    h1 {
        margin-bottom: 0;
        color: #333;
    }
    .mb-4 {
        margin-bottom: 2rem !important;
    }
</style>
{% endblock %}
