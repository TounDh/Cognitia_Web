{% extends 'base.html.twig' %}

{% block title %}Courses{% endblock %}

{% block body %}

<style>
.cart_btn {
    display: inline-block;
    background-color:rgb(122, 128, 219); /* Bright orange color */
    color: white;
    font-size: 16px;
    font-weight: bold;
    padding: 3px 5px;
    margin-top: 10px;
    border-radius: 5px;
    text-align: center;
    text-decoration: none;
    transition: background 0.3s ease, transform 0.2s ease;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0);
	float: right;
	clear: both;
}

.cart_btn:hover {
    background-color: rgb(96, 101, 177); /* Darker shade for hover */
    transform: scale(1.05);
}

.cart_btn:active {
    background-color: rgb(72, 76, 129); /* Even darker for active click */
    transform: scale(0.98);
}

</style>

<!-- START SECTION TOP -->
<section class="section-top">
    <div class="container">
        <div class="col-lg-10 offset-lg-1 text-center">
            <div class="section-top-title wow fadeInRight" data-wow-duration="1s" data-wow-delay="0.3s" data-wow-offset="0">
                <h1>All Courses</h1>
                <ul>
                    <li><a href="{{ path('app_home') }}">Home</a></li>
                    <li> / Courses</li>
                </ul>
            </div>
        </div>
    </div>
</section> 
<!-- END SECTION TOP -->

<!-- START COURSE -->
<div class="best-cpurse section-padding">
    <div class="container">
        <div class="section-title">
            <h2>Popular Courses</h2>
            <p>Choose Our <span><u>Top Courses</u></span></p>
        </div>

        <!-- Add header section with title and create button -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Courses</h1>
            {% if is_granted('ROLE_INSTRUCTEUR') %}
                <a href="{{ path('app_cours_new') }}" class="btn btn-success">
                    <i class="fas fa-plus"></i> Create New Course
                </a>
            {% endif %}
        </div>

        <div class="row">
            {% for cours in cours %}
                <div class="col-lg-4 col-sm-6 col-xs-12 wow fadeInUp" data-wow-duration="1s" data-wow-delay="0.1s" data-wow-offset="0">
                    <div class="course-slide">
                        <div class="course-img">
                            {% if cours.image %}
                                <img src="{{ asset('uploads/cours/' ~ cours.image) }}" 
                                     alt="{{ cours.titre }}"
                                     style="width: 100%; height: 200px; object-fit: cover;"
                                >
                            {% else %}
                                <img src="{{ asset('images/default-course.jpg') }}" 
                                     alt="Default Course Image"
                                     style="width: 100%; height: 200px; object-fit: cover;"
                                >
                            {% endif %}
                            <div class="course-date">
                                <span class="month">{{ cours.prix }} TND</span>
                            </div>
                        </div>
                        <div class="course-content">
                            <a class="c_btn" href="{{ path('app_cours_show', {'id': cours.id}) }}">{{ cours.difficulte }}</a>
                            <h3><a href="{{ path('app_cours_show', {'id': cours.id}) }}">{{ cours.titre }}</a></h3>
                            <p>{{ cours.description|slice(0, 100) }}...</p> <!-- Slice the description to show only a preview -->
                            <span><i class="fa fa-calendar"></i>{{ cours.datePublication|date('Y-m-d') }}</span>
                            <span><i class="fa fa-clock-o"></i>{{ cours.duree }} hours</span>
                            <span><i class="fa fa-star"></i>4.9</span>
                            <span><i class="fa fa-table"></i><strong>30 Seats Available</strong></span>

                            <!-- Edit and Delete Buttons -->

                            <div class="mt-2">
                                <a href="{{ path('app_cours_edit', {'id': cours.id}) }}" class="btn btn-primary btn-sm">Edit</a>
                                
                                <form action="{{ path('app_cours_delete', {'id': cours.id}) }}" method="post" style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cours.id) }}">
                                    <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                                </form>
                            </div>

                            <div class="d-flex justify-content-between align-items-center">
                                <a href="{{ path('app_cours_show', {'id': cours.id}) }}" class="btn btn-primary">
                                    <i class="fas fa-eye"></i> View
                                </a>
                                {% if is_granted('ROLE_INSTRUCTEUR') and app.user == cours.instructeur %}
                                    <div class="btn-group">
                                        <a href="{{ path('app_cours_edit', {'id': cours.id}) }}" class="btn btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" action="{{ path('app_cours_delete', {'id': cours.id}) }}" 
                                              style="display: inline-block;"
                                              onsubmit="return confirm('Are you sure you want to delete this course? This action cannot be undone.');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cours.id) }}">
                                            <button class="btn btn-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                {% endif %}

                            </div>

















<form action="{{ path('app_panier_add_to_cart', {'coursId': cours.id}) }}" method="POST" style="display: inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('add_to_cart_' ~ cours.id) }}">
                    <button class="cart_btn btn-info btn-bold" type="submit">
                        <i class="fa fa-shopping-cart"></i> | Add to Cart
                    </button>
                </form>








                

                           
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info">
                        No courses found. 
                        {% if is_granted('ROLE_INSTRUCTEUR') %}
                            <a href="{{ path('app_cours_new') }}" class="alert-link">Create a new one</a>.
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
<!-- END COURSE -->
































<script>
function addToCart(courseId) {
    fetch(`/panier/add/${courseId}`, {
        method: 'POST',
        headers: {
            'X-Requested-With': 'XMLHttpRequest'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('Course added to cart successfully!');
        } else {
            alert('Error: ' + data.error);
        }
    })
    .catch(error => console.error('Error:', error));
}
</script>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .card {
        transition: transform 0.2s;
        border-radius: 10px;
        border: none;
    }
    .card:hover {
        transform: translateY(-5px);
    }
    .btn-group .btn {
        border-radius: 4px;
        margin-left: 5px;
    }
    .badge {
        padding: 0.5em 1em;
    }
    .card-img-top {
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }
    .btn i {
        margin-right: 0.25rem;
    }
    form {
        display: inline-block;
    }
    /* Add some spacing for the header section */
    h1 {
        margin-bottom: 0;
        color: #333;
    }
    .mb-4 {
        margin-bottom: 2rem !important;
    }
</style>
{% endblock %}
