{% extends 'base.html.twig' %}

{% block title %}Two-Factor Authentication{% endblock %}

{% block body %}

<!-- START SECTION TOP -->
<section class="section-top">
    <div class="container">
        <div class="col-lg-10 offset-lg-1 text-center">
            <div class="section-top-title wow fadeInRight" data-wow-duration="1s" data-wow-delay="0.3s" data-wow-offset="0">
                <h1>Two-Factor Authentication</h1>
                <ul>
                    <li><a href="{{ path('app_home') }}">Home</a></li>
                    <li> / Two-Factor Authentication</li>
                </ul>
            </div><!-- //.HERO-TEXT -->
        </div><!--- END COL -->
    </div><!--- END CONTAINER -->
</section>
<!-- END SECTION TOP -->

<!-- START 2FA FORM -->
<section class="login_register section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-xs-12">
                <div class="login">
                    <h4 class="login_register_title">Two-Factor Authentication</h4>
                    
                    {# Afficher les messages flash #}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger" role="alert">{{ message }}</div>
                    {% endfor %}

                    <form action="{{ path('app_2fa_check') }}" method="post">
                        <div class="form-group">
                            <label for="_auth_code">Authentication Code:</label>
                            <input type="text" id="_auth_code" name="_auth_code" class="form-control requiredField input-label" autocomplete="one-time-code" autofocus placeholder="Enter your authentication code">
                        </div>
                        
                        <div class="form-group col-lg-12">
                            <button class="btn_one" type="submit">Submit</button>
                        </div>
                    </form>
                </div>
            </div><!--- END COL -->
        </div><!--- END ROW -->
    </div><!--- END CONTAINER -->
</section>
<!-- END 2FA FORM -->

{% endblock %}