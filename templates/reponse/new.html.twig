{% extends 'base.html.twig' %}

{% block title %}Ajouter une Réponse{% endblock %}

{% block body %}
{% if is_granted('ROLE_INSTRUCTEUR') %}
<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12" style="margin-top: 80px;">
            <h1 class="text-primary fw-bold text-center mb-4">Ajouter une Réponse</h1>
            <p class="text-center text-muted">Pour la Question : "{{ question.contenu }}"</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm hover-shadow transition-all">
                <div class="card-header bg-primary bg-opacity-10">
                    <h5 class="card-title mb-0 text-primary">Nouvelle Réponse</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-4">
                            {{ form_label(form.contenu, 'Contenu de la Réponse', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.contenu, {'attr': {
                                'class': 'form-control form-control-lg',
                                'placeholder': 'Entrez le contenu de la réponse'
                            }}) }}
                            {{ form_errors(form.contenu, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.question, 'Question Associée', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.question, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.question, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                {{ form_widget(form.estCorrecte, {'attr': {
                                    'class': 'form-check-input'
                                }}) }}
                                {{ form_label(form.estCorrecte, 'Est-ce la bonne réponse ?', {'label_attr': {
                                    'class': 'form-check-label fw-bold'
                                }}) }}
                            </div>
                            {{ form_errors(form.estCorrecte, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Enregistrer
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>

            <div class="text-center mt-4">
                <a href="{{ path('app_reponse_index', {'question_id': question.id}) }}" class="btn btn-outline-primary rounded-pill">
                    <i class="fas fa-arrow-left me-2"></i>Retour à la liste des réponses
                </a>
            </div>
        </div>
    </div>
</div>

<style>
.hover-shadow:hover {
    transform: translateY(-5px);
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
}

.transition-all {
    transition: all 0.3s ease;
}

.form-control:focus, .form-select:focus, .form-check-input:focus {
    border-color: #0d6efd;
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
}

.form-check-input:checked {
    background-color: #0d6efd;
    border-color: #0d6efd;
}
</style>
{% endif %}
{% endblock %}
