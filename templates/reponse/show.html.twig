{% extends 'Quizbase.html.twig' %}

{% block title %}Détails de la Réponse{% endblock %}

{% block body %}
{% if is_granted('ROLE_INSTRUCTEUR') %}

    <div class="container mt-5">
        <h1 class="text-center mb-4">Détails de la Réponse</h1>

        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ reponse.id }}</td>
                        </tr>
                        <tr>
                            <th>Contenu</th>
                            <td>{{ reponse.contenu }}</td>
                        </tr>
                        <tr>
                            <th>Question</th>
                            <td>{{ reponse.question }}</td>
                        </tr>
                        <tr>
                            <th>Est Correcte</th>
                            <td>{{ reponse.estCorrecte ? 'Oui' : 'Non' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_reponse_edit', {'id': reponse.id}) }}" class="btn btn-success btn-sm">Modifier</a>
        </div>
                
        <table>
            <tbody>
                <tr>
                    <td>{{ include('reponse/_delete_form.html.twig') }}</td>
                </tr>
                <tr>
                    <td><a href="{{ path('app_reponse_index', {'question_id': question.id}) }}" class="btn btn-primary btn-sm">Retour à la liste</a></td>
                </tr>
            </tbody>
        </table>
    </div>
    
{% endif %}

{% endblock %}
