{% extends 'base.html.twig' %}

{% block title %}Password Reset Email Sent{% endblock %}

{% block body %}

<!-- START SECTION TOP -->
<section class="section-top">
    <div class="container">
        <div class="col-lg-10 offset-lg-1 text-center">
            <div class="section-top-title wow fadeInRight" data-wow-duration="1s" data-wow-delay="0.3s" data-wow-offset="0">
                <h1>Password Reset Email Sent</h1>
            </div>
        </div>
    </div>
</section>    
<!-- END SECTION TOP -->

<!-- START NOTIFICATION SECTION -->
<section class="login_register section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-xs-12">
                <div class="login bg-glass p-4 rounded shadow-sm">
                    <h4 class="login_register_title text-center mb-4">Email Sent</h4>
                    <p class="text-center mb-3">
                        If an account with this email exists, you will receive a password reset link shortly. 
                        The link will expire in {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
                    </p>
                    <p class="text-center mb-3">
                        Didn't receive an email? Check your spam folder or <a href="{{ path('app_forgot_password_request') }}">try again</a>.
                    </p>
                    <div class="text-center">
                        <a href="{{ path('app_login') }}" class="btn btn-primary btn-block">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- END NOTIFICATION SECTION -->

{% endblock %}
