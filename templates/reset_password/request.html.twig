{% extends 'base.html.twig' %}

{% block title %}Reset Your Password{% endblock %}

{% block body %}

<!-- START SECTION TOP -->
<section class="section-top">
    <div class="container">
        <div class="col-lg-10 offset-lg-1 text-center">
            <div class="section-top-title wow fadeInRight" data-wow-duration="1s" data-wow-delay="0.3s" data-wow-offset="0">
                <h1>Reset Your Password</h1>
            </div>
        </div>
    </div>
</section>    
<!-- END SECTION TOP -->

<!-- START RESET PASSWORD FORM -->
<section class="login_register section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-xs-12">
                <div class="login bg-glass p-4 rounded shadow-sm">
                    <h4 class="login_register_title text-center mb-4">Reset Your Password</h4>
                    {% for flash_error in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}
                    {{ form_start(requestForm) }}
                        <div class="form-group mb-3">
                            <label for="email">Email</label>
                            {{ form_widget(requestForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter your email'}}) }}
                        </div>
                        <div class="text-center">
                            <button class="btn btn-primary btn-block" type="submit">Send Reset Link</button>
                        </div>
                    {{ form_end(requestForm) }}
                    <p class="text-center mt-3">Remembered your password? <a href="{{ path('app_login') }}">Click here to login</a>.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- END RESET PASSWORD FORM -->

{% endblock %}
