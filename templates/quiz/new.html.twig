{% extends 'base.html.twig' %}

{% block title %}Ajouter un Quiz{% endblock %}

{% block body %}

{% if is_granted('ROLE_INSTRUCTEUR') %}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12" style="margin-top: 80px;">
            <h1 class="text-primary fw-bold text-center mb-4">Créer un Quiz</h1>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm hover-shadow transition-all">
                <div class="card-header bg-primary bg-opacity-10">
                    <h5 class="card-title mb-0 text-primary">Nouveau Quiz</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-4">
                            {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.titre, {'attr': {
                                'class': 'form-control form-control-lg',
                                'placeholder': 'Entrez le titre du quiz'
                            }}) }}
                            {{ form_errors(form.titre, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.tempsMax, 'Temps Maximum (secondes)', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.tempsMax, {'attr': {
                                'class': 'form-control',
                                'placeholder': 'Entrez le temps maximum en secondes'
                            }}) }}
                            {{ form_errors(form.tempsMax, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.cours, 'Cours associé', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.cours, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.cours, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.instructeur, 'Instructeur associé', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.instructeur, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.instructeur, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Enregistrer
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>

            <div class="text-center mt-4">
                <a href="{{ path('app_quiz_index') }}" class="btn btn-outline-primary rounded-pill">
                    <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                </a>
            </div>
        </div>
    </div>
</div>

<style>
.hover-shadow:hover {
    transform: translateY(-5px);
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
}

.transition-all {
    transition: all 0.3s ease;
}

.form-control:focus, .form-select:focus {
    border-color: #0d6efd;
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
}
</style>
{% endif %}

{% endblock %}
