{% extends 'Quizbase.html.twig' %}

{% block title %}Liste des Quiz{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">Liste des Quiz</h1>
    {% if is_granted('ROLE_INSTRUCTEUR') or is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_quiz_new') }}" class="btn btn-primary mb-3">Cr√©er un nouveau quiz</a>
    {% endif %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Cours</th>
                <th>Instructeur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for quiz in quizzes %}
                <tr>
                    <td>{{ quiz.id }}</td>
                    <td>{{ quiz.titre }}</td>
                    <td>{{ quiz.cours.titre }}</td>
                    <td>{{ quiz.instructeur.email }}</td>
                    <td>
                    {% if is_granted('ROLE_INSTRUCTEUR') or is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_quiz_show', {'id': quiz.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('app_quiz_edit', {'id': quiz.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        <a href="{{ path('app_quiz_stats', {'id': quiz.id}) }}" class="btn btn-success btn-sm">Statistiques</a>
                        <a href="{{ path('app_question_index', {'quiz_id': quiz.id}) }}" class="btn btn-success btn-sm">Liste Questions</a>
                        <td>{{ include('quiz/_delete_form.html.twig') }}</td>
                    {% endif %}
                    {% if is_granted('ROLE_APPRENANT') %}
                        <a href="{{ path('app_quiz_start', {'id': quiz.id}) }}" class="btn btn-primary btn-sm">Passer le Quiz</a>
                    {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center">Aucun quiz disponible</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
