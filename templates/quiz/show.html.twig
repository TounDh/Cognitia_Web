{% extends 'base.html.twig' %}

{% block title %}Détails du Quiz{% endblock %}

{% block body %}

{% if is_granted('ROLE_INSTRUCTEUR') %}

<div class="container mt-5" style="padding: 150px;">
        <h1 class="text-center mb-4">Détails du Quiz</h1>

        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ quiz.id }}</td>
                        </tr>
                        <tr>
                            <th>Titre</th>
                            <td>{{ quiz.titre }}</td>
                        </tr>
                        <tr>
                            <th>Temps Max (secondes)</th>
                            <td>{{ quiz.tempsMax }} sec</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        
        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_quiz_edit', {'id': quiz.id}) }}" class="btn btn-success btn-sm">Modifier</a>
        </div>

            <table>
                <tbody>
                    <tr>
                        <td>{{ include('quiz/_delete_form.html.twig') }}</td>
                    </tr>
                    <tr>
                        <td><a href="{{ path('app_quiz_index') }}" class="btn btn-primary btn-sm">Retour à la liste</a></td>
                    </tr>
                </tbody>
            </table>
    </div>

{% endif %}

{% endblock %}
