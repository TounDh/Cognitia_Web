{% extends 'Quizbase.html.twig' %}

{% block title %}Modifier un Quiz{% endblock %}

{% block body %}

{% if is_granted('ROLE_INSTRUCTEUR') %}

<div class="container mt-5">
    <h1 class="text-center">Modifier un Quiz</h1>
    <div class="card p-4 shadow">
        {{ include('quiz/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('app_quiz_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <div>
            {{ include('quiz/_delete_form.html.twig') }}
        </div>
    </div>
</div>

{% endif %}

{% endblock %}
